<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ana yol zemini (koyu gri) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2C2C2C" />
        </shape>
    </item>
    
    <!-- Yol kenarları (yeşil çimen) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="80dp" android:color="#388E3C" />
        </shape>
    </item>
    
    <!-- Sol şerit çizgisi -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#FFFFFF" android:dashWidth="30dp" android:dashGap="30dp" />
        </shape>
    </item>
    
    <!-- Orta şerit çizgisi (çift çizgi) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FFFFFF" android:dashWidth="25dp" android:dashGap="25dp" />
        </shape>
    </item>
    
    <!-- Orta şerit çizgisi 2 -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FFFFFF" android:dashWidth="25dp" android:dashGap="25dp" />
        </shape>
    </item>
    
    <!-- Sağ şerit çizgisi -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#FFFFFF" android:dashWidth="30dp" android:dashGap="30dp" />
        </shape>
    </item>
    
    <!-- Yol kenar çizgileri (sarı) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#FFC107" />
        </shape>
    </item>
</layer-list> 