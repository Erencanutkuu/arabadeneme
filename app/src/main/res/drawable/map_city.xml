<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Şehir zemini -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4A4A4A"
                android:endColor="#2A2A2A"
                android:angle="270" />
        </shape>
    </item>

    <!-- Asfalt yol çizgileri -->
    <item android:top="200dp" android:height="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFF00" />
        </shape>
    </item>

    <item android:top="400dp" android:height="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFF00" />
        </shape>
    </item>

    <item android:top="600dp" android:height="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFF00" />
        </shape>
    </item>

    <!-- Şehir kenarları -->
    <item android:left="0dp" android:width="30dp">
        <shape android:shape="rectangle">
            <solid android:color="#3A3A3A" />
        </shape>
    </item>

    <item android:right="0dp" android:width="30dp">
        <shape android:shape="rectangle">
            <solid android:color="#3A3A3A" />
        </shape>
    </item>

    <!-- Bina silüetleri -->
    <item android:top="0dp" android:height="120dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A1A1A"
                android:endColor="#000000"
                android:angle="90" />
        </shape>
    </item>

</layer-list>