<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gökyüzü (gradient) -->
    <item>
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#87CEEB"
                android:endColor="#4682B4"
                android:angle="90" />
        </shape>
    </item>
    
    <!-- Bulutlar (beyaz yuvarlaklar) -->
    <item android:top="50dp" android:left="50dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size android:width="80dp" android:height="40dp" />
        </shape>
    </item>
    
    <item android:top="80dp" android:right="100dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size android:width="100dp" android:height="50dp" />
        </shape>
    </item>
    
    <item android:top="120dp" android:left="200dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size android:width="60dp" android:height="30dp" />
        </shape>
    </item>
    
    <!-- Deniz (alt yarı) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#00000000"
                android:centerColor="#00000000"
                android:endColor="#1E90FF"
                android:centerY="0.6"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Sol taraftaki şehir (gökdelenler) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#00000000"
                android:centerColor="#00000000"
                android:endColor="#00000000"
                android:centerX="0.2"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Gökdelenler (sol tarafta) -->
    <item android:top="200dp" android:left="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#696969" />
            <size android:width="15dp" android:height="200dp" />
        </shape>
    </item>
    
    <item android:top="180dp" android:left="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#808080" />
            <size android:width="12dp" android:height="220dp" />
        </shape>
    </item>
    
    <item android:top="220dp" android:left="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#A9A9A9" />
            <size android:width="18dp" android:height="180dp" />
        </shape>
    </item>
    
    <!-- Yol zemini (asfalt) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#00000000"
                android:centerColor="#00000000"
                android:endColor="#2F2F2F"
                android:centerY="0.8"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Sol şerit çizgisi (beyaz kesikli) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#FFFFFF" android:dashWidth="40dp" android:dashGap="40dp" />
        </shape>
    </item>
    
    <!-- Orta şerit çizgisi (çift sarı) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#FFD700" android:dashWidth="30dp" android:dashGap="30dp" />
        </shape>
    </item>
    
    <!-- Orta şerit çizgisi 2 (çift sarı) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#FFD700" android:dashWidth="30dp" android:dashGap="30dp" />
        </shape>
    </item>
    
    <!-- Sağ şerit çizgisi (beyaz kesikli) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#FFFFFF" android:dashWidth="40dp" android:dashGap="40dp" />
        </shape>
    </item>
    
    <!-- Yol kenar çizgileri (sarı sürekli) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="4dp" android:color="#FFC107" />
        </shape>
    </item>
    
    <!-- Köprü korkulukları (gümüş) -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="8dp" android:color="#C0C0C0" />
        </shape>
    </item>
    
    <!-- Yol üzerindeki gölge efekti -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <gradient 
                android:startColor="#00000000"
                android:centerColor="#22000000"
                android:endColor="#00000000"
                android:centerY="0.9"
                android:type="linear" />
        </shape>
    </item>
</layer-list> 