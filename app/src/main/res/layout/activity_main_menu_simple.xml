<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCCCCC"
    android:padding="16dp">

    <!-- Basit başlık -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_menu_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Para -->
    <TextView
        android:id="@+id/moneyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="💰 0"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Level bilgileri -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="#2C2C2C"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/currentLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mevcut Level: 1"
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="8dp" />

        <!-- İlerleme Durumu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İlerleme: 1/10"
                android:textSize="12sp"
                android:textColor="#AAAAAA"
                android:layout_marginBottom="4dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="10"
                android:progress="1"
                android:progressTint="#4CAF50"
                android:progressBackgroundTint="#666666" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_game"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>

    <!-- Aktif level bloğu -->
    <LinearLayout
        android:id="@+id/activeLevelBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4CAF50"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activeLevelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. SEVİYE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/activeLevelDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temel kelimeleri öğren"
                android:textSize="14sp"
                android:textColor="#E8F5E8" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▶️"
            android:textSize="24sp" />

    </LinearLayout>

    <!-- Üst butonlar (özellikler) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings_title"
            android:textSize="14sp"
            android:gravity="center"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/dailyRewardsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/daily_rewards"
            android:textSize="14sp"
            android:gravity="center"
            android:background="#FF6B35"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginHorizontal="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/mapSelectionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/map_selection"
            android:textSize="14sp"
            android:gravity="center"
            android:background="#2196F3"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Second row of feature buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/leaderboardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🏆 Liderlik"
            android:textSize="14sp"
            android:gravity="center"
            android:background="#FFD700"
            android:textColor="#000000"
            android:padding="12dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/charactersButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="👤 Karakterler"
            android:textSize="14sp"
            android:gravity="center"
            android:background="#9C27B0"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginHorizontal="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/analyticsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📊 İstatistik"
            android:textSize="14sp"
            android:gravity="center"
            android:background="#607D8B"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- ScrollView for levels -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/levelPathContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp" />

    </ScrollView>

</LinearLayout>