<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background21"
    tools:context=".MainActivity">

    <!-- Level göstergesi -->
    <TextView
        android:id="@+id/levelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/level_badge"
        android:padding="12dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Yakıt göstergesi -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/score_badge"
        android:padding="12dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⛽ 100%"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/fuelProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="120dp"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:max="100"
            android:progress="100"
            android:progressTint="#4CAF50"
            android:progressBackgroundTint="#666666" />

    </LinearLayout>

    <!-- Soru kartı arka planı -->
    <androidx.cardview.widget.CardView
        android:id="@+id/questionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/levelText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Soru metni -->
            <TextView
                android:id="@+id/questionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Seçenek 1 (hareket edecek) -->
    <Button
        android:id="@+id/option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 1"
        android:textSize="18sp"
        android:background="@drawable/option_button"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/questionCard"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp" />

    <!-- Seçenek 2 (hareket edecek) -->
    <Button
        android:id="@+id/option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 2"
        android:textSize="18sp"
        android:background="@drawable/option_button"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/questionCard"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp" />

    <!-- Engel 1 -->
    <ImageView
        android:id="@+id/obstacle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/arabaengel"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/option1"
        app:layout_constraintBottom_toTopOf="@id/carImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp" />

    <!-- Engel 2 -->
    <ImageView
        android:id="@+id/obstacle2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/arabaengel"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/option1"
        app:layout_constraintBottom_toTopOf="@id/carImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp" />

    <!-- Engel 3 -->
    <ImageView
        android:id="@+id/obstacle3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/arabaengel"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/option1"
        app:layout_constraintBottom_toTopOf="@id/carImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp" />

    <!-- Araba -->
    <ImageView
        android:id="@+id/carImage"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        android:elevation="15dp"
        android:src="@drawable/arabagorsell"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
